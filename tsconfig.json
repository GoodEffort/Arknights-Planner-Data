{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "noResolve": false,
        "types": [
            "node"
        ],
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true,
        "fileExtensions": {
            "inputGlob": "{js,jsx,mjs}",
            "outputCheck": [
                "js",
                "json",
                "jsx",
                "mjs"
            ]
        }
    }
}